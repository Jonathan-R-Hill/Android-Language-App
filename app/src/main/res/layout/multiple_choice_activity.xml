<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/floral">

    <Button
        android:id="@+id/nativeWord4"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="132dp"
        android:text="Word 4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nativeWord3"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="50dp"
        android:text="Word 3"
        app:layout_constraintBottom_toTopOf="@+id/nativeWord4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nativeWord2"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="50dp"
        android:text="Word 2"
        app:layout_constraintBottom_toTopOf="@+id/nativeWord3"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nativeWord1"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="129dp"
        android:layout_marginBottom="50dp"
        android:text="Word 1"
        app:layout_constraintBottom_toTopOf="@+id/nativeWord2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/targetWord1"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="132dp"
        android:text="Target 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/targetWord2"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="50dp"
        android:text="Target 2"
        app:layout_constraintBottom_toTopOf="@+id/targetWord1"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/targetWord3"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="50dp"
        android:text="Target 3"
        app:layout_constraintBottom_toTopOf="@+id/targetWord2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/targetWord4"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="50dp"
        android:text="Target 4"
        app:layout_constraintBottom_toTopOf="@+id/targetWord3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
